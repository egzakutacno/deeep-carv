{
  "service": {
    "name": "carv-verifier-service",
    "version": "1.0.0",
    "description": "Carv Verifier Node service managed by Riptide"
  },
  "logging": {
    "level": "info"
  },
  "environment": {
    "CARV_PRIVATE_KEY": {
      "required": true,
      "description": "Private key for the Carv verifier node wallet"
    },
    "CARV_REWARD_CLAIMER_ADDR": {
      "required": false,
      "default": "0x0000000000000000000000000000000000000000",
      "description": "Reward claimer address for the verifier node"
    },
    "CARV_CHAIN_ID": {
      "required": false,
      "default": "42161",
      "description": "Chain ID (42161 for Arbitrum mainnet)"
    },
    "CARV_RPC_URL": {
      "required": false,
      "default": "https://arb1.arbitrum.io/rpc",
      "description": "RPC URL for Arbitrum network"
    },
    "NODE_ENV": {
      "required": false,
      "default": "production",
      "description": "Node environment"
    }
  },
  "health": {
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "lifecycle": {
    "startup_timeout": 120,
    "shutdown_timeout": 30
  }
}